<Page
    x:Class="E_media.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <muxc:TabView x:Name="TabViewControl" CanReorderTabs="False" IsAddTabButtonVisible="True" AddTabButtonClick="TabViewControl_AddTabButtonClick"
                  TabCloseRequested="TabViewControl_TabCloseRequested" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <muxc:TabView.TabStripFooter>
            <Grid x:Name="TabFooterControl" Background="Transparent" />
        </muxc:TabView.TabStripFooter>
    </muxc:TabView>
</Page>
